<div class="book-details">
  <h1><%= t ".book" %></h1>
  <hr>

  <div class="row book-info">
    <h2 class="book-title "><%= @book.title %></h2>
    <div class="col-xs-3">
      <%= image_tag get_book_cover(@book), alt: t(".default_book_alt"), class: "book-cover" %>
      <div class="product-bottom-details row">
        <% if logged_in? %>
          <%= link_to t(".borrow"), new_user_borrow_request_path(@current_user.id, id: @book.id),
            class: "btn btn-primary button" %>
        <% else %>
          <%= link_to t("global.menu.login"), login_path,
            class: "btn btn-primary button" %>
        <% end %>
      </div>
    </div>
    <div class="col-xs-9">
      <p class="section-header"><%= t ".description" %></p>
      <p class="section-content">
        <%= @book.description %>
      </p>

      <p class="section-header"><%= t ".publish_date" %></p>
      <p class="section-content">
        <%= @book.published_date %>
      </p>

      <p class="section-header"><%= t ".status" %></p>
      <p class="section-content">
        <%= @book.status.capitalize %>
      </p>

      <p class="section-header"><%= t ".quantity" %></p>
      <p class="section-content">
        <%= @book.quantity %>
      </p>

      <p class="section-header"><%= t ".category" %></p>
      <p class="section-content">
        <%= link_to @book.category.name, "#" %>
      </p>

      <p class="section-header"><%= t ".publisher" %></p>
      <p class="section-content">
        <%= link_to @book.publisher.name, "#" %>
      </p>
    </div>
  </div>
</div>
